    "webpack-bundle-analyzer": "2.9.0",
    "webpack-dev-server": "2.8.2",
    "webpack-file-changer": "2.0.1"
  },
  "build": {
    "appId": "org.medibloc.wallet",
    "productName": "MediBloc Wallet",
    "protocols": {
      "name": "medibloc-wallet",
      "schemes": [
        "medibloc"
      ]
    },
    "artifactName": "medibloc-wallet-${os}-${arch}-${version}.${ext}",
    "publish": [
      "github"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "desktop": {
        "MimeType": "application/medibloc;x-scheme-handler/medibloc"
      },
      "category": "Network"
    },
    "win": {
      "target": "nsis"
    }
  },
  "bundlesize": [
    {
      "path": "./app/build/bundle.app.*.js",
      "maxSize": "890 kB"
    },
    {
      "path": "./app/build/bundle.vendor.*.js",
      "maxSize": "150 kB"
    },
    {
      "path": "./app/build/styles.*.css",
      "maxSize": "1.50 MB"
    }
  ],
  "greenkeeper": {
    "ignore": [
      "cucumber",
      "protractor-cucumber-framework",
      "postcss-cssnext"
    ]
  }
}
